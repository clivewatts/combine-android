<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="50dp"
android:layout_gravity="top"
android:orientation="vertical"
    >
<android.support.v7.widget.CardView
    android:orientation="vertical"

    app:cardBackgroundColor="@color/combine_slate_grey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp"
    app:cardElevation="4dp">
    <LinearLayout
        android:padding="10dp"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:src="@drawable/windows_logo"
            android:id="@+id/windows_compat_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:src="@drawable/osx_logo"
            android:layout_weight="1"
            android:id="@+id/osx_compat_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:src="@drawable/linux_logo"
            android:layout_weight="1"
            android:id="@+id/linux_compat_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</android.support.v7.widget.CardView>
</FrameLayout>